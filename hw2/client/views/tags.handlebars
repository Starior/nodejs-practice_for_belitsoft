<h1 style="text-align: center; font-size: 50px;margin: 0 !important; background-color:#f8f9fa;">Posts by tag</h1>
<main>
    <div class="album py-5 bg-light">
      <div class="container">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
 {{#each posts}}

        <div class="col">
          <div class="card shadow-sm">
            <img class="bd-placeholder-img card-img-top" width="100%" height="225" src="{{this.thumbnail}}"
              alt="placeholder"
              onError="this.src='http://www.kreilkamp.com/wp-content/uploads/2016/11/thumbnail-placeholder-500x334.jpg'"></img>

            <div class="card-body">
              <h4 style="text-align: center;">{{this.name}}</h4>
              <small class="text-muted">_id: {{this._id}}</small>

              {{#if body}}
              <p class="card-text">{{this.body}}</p>
              {{/if}}

              <p>excerpt: {{this.excerpt}}</p>

              {{#if categories}}
              <p>categories:
                {{#each categories}}
                <span style="border-radius: 10px; background-color: rgb(178, 196, 148); padding: 2px 5px 3px 6px; margin-right: 2px">
                {{this.name}}
                </span>
                {{/each}}
              </p>
              {{/if}}

              {{#if tags}}
              <p>tags:
                {{#each tags}}
                <span style="border-radius: 10px; background-color: rgb(187, 172, 172); padding: 2px 5px 3px 6px; margin-right: 2px">
                {{this.name}}
                </span> 
                {{/each}}
              </p>
              {{/if}}

              {{#if author}}
              <p>author:
                {{#each author}}
                {{this.name}}
                {{/each}}
              </p>
              {{/if}}
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <form  method="get" action="/posts/{{this._id}}">
                    <button type="submit" class="btn btn-sm btn-outline-secondary" value="">View (Work)</button>
                  </form>
                  <button type="button" class="btn btn-sm btn-outline-secondary">Edit(Not work)</button>
                </div>
                <small class="text-muted">created_at: {{this.created_at}}</small>
                <small class="text-muted">updated_at: {{this.updated_at}}</small>
              </div>
            </div>
          </div>
        </div>
        {{/each}}
        </div>
      </div>
    </div>

  </main>