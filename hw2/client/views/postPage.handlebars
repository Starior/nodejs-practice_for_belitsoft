<main>
  <h1 style="text-align: center; font-size: 50px;">Single post Page</h1>
  <div class="album py-5 bg-light">
    <div class="container">
      <div>
        <img class="bd-placeholder-img card-img-top" src="{{post.thumbnail}}" alt="placeholder"
          onError="this.src='http://www.kreilkamp.com/wp-content/uploads/2016/11/thumbnail-placeholder-500x334.jpg'"
          style="display: block;
  margin-left: auto;
  margin-right: auto;
  width: 50%;"></img>

        <div>
          <h4>{{post.name}}</h4>
          <p class="card-text">body: {{post.body}}</p>
          <p>excerpt: {{post.excerpt}}</p>
          <p>categories:
            {{#each post.categories}}
            {{this.name}},
            {{/each}}
          </p>
          <p>tags:
            {{#each post.tags}}
            {{this.name}},
            {{/each}}
          </p>
          <p>author:
            {{#each post.author}}
            {{this.name}}
            {{/each}}
          </p>
          <div class="d-flex justify-content-between align-items-center">
            <div class="btn-group">
              <button type="button" class="btn btn-sm btn-outline-secondary">Edit(Not work)</button>
            </div>
            <div style="position: relative;
  float: right">created_at: {{post.created_at}}</div>
            <div style="position: relative;
  float: right">updated_at: {{post.updated_at}}</div>
          </div>
        </div>
      </div>




    </div>
  </div>

</main>